      td.x, td.y, td.z { text-align: right; width: 5em }
      body {
         height: 100vh;
         padding-top: 0px;
      }
      #c {
	  position: fixed;
	  left: 0px;
	  width: 100%;
	  height: 100%;
	  border: solid thin red;
      }
      #canvas, #canvas2 { border: thin solid gray };
    </style>
